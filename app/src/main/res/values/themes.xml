<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Jotter" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <item name="colorPrimaryVariant">@color/primaryColor</item>
        <item name="colorPrimaryContainer">@color/primaryColor</item>
        <item name="colorOnPrimaryContainer">@color/primaryTextColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryLightColor</item>
        <item name="colorSecondaryVariant">@color/secondaryColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="bottomSheetDialogTheme">@style/Jotter.BottomSheetDialog</item>
        <item name="floatingActionButtonStyle">@style/Widget.Design.FloatingActionButton</item>
        <item name="android:textColor">@color/black</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeStyle">@style/Jotter.ActionModeStyle</item>
        <item name="actionModeCloseDrawable">@drawable/menu_cancel</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Material3.Dark.ActionBar</item>
        <item name="shapeAppearance">@style/ShapeAppearanceOverlay.Material3.FloatingActionButton</item>
        <item name="materialAlertDialogTheme">@style/Jotter.DialogTheme</item>
        <item name="actionMenuTextColor">@color/primaryColor</item>
        <item name="snackbarButtonStyle">@style/Jotter.SnackbarTheme</item>
        <item name="switchStyle">@style/Widget.MaterialComponents.CompoundButton.Switch</item>
    </style>

    <!-- BottomSheet Theme. -->
    <style name="Jotter.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialog</item>
    </style>

    <style name="BottomSheetDialog" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearance">@style/ShapeAppearance</item>
        <item name="behavior_peekHeight">300dp</item>
    </style>

    <style name="ShapeAppearance" parent="ShapeAppearance.Material3.LargeComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <!-- ActionBar Theme. -->
    <style name="Jotter.ActionModeStyle" parent="@style/Widget.AppCompat.ActionMode">
        <item name="background">?attr/colorPrimaryVariant</item>
    </style>

    <!-- Dialog Theme. -->
    <style name="Jotter.DialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="colorPrimary">@color/primaryColor</item>
    </style>

    <!-- Snackbar Theme. -->
    <style name="Jotter.SnackbarTheme" parent="Widget.Material3.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/primaryLightColor</item>
    </style>

</resources>